<!DOCTYPE html>
<html lang="en">

<head>
    <title> Task List </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/css/util.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <!--===============================================================================================-->
</head>

<body>

    <div class="bg-contact2" style="background-image: url('/images/bg-01.jpg');">
        <div class="container-contact2">
            <div class="wrap-contact2" style="width: 76%;">
                <form class="contact2-form validate-form" method="POST" action="">
                    <span class="contact2-form-title">
                        List of Tasks
                    </span>

                    <table class="table table-striped table-bordered">
                        <tr>
                            <td>
                                <div><label>Task ID:</label></div>
                            </td>

                            <td>
                                <div><label>Task Name:</label></div>
                            </td>

                            <td>
                                <div><label>Task Description:</label></div>
                            </td>

                            <td>
                                <div><label>Start Date:</label></div>
                            </td>

                            <td>
                                <div><label>End date </label></div>
                            </td>

                            <td>
                                <div><label>Owner </label></div>
                            </td>

                            <td>
                                <div><label>Update </label></div>
                            </td>

                            <td>
                                <div><label>Delete </label></div>
                            </td>
                        </tr>
                    </table>

                    <% tasks.forEach(function(task){ %>

                    <form method="post">
                        <table class="table table-striped table-bordered">

                            <tr>
                                <td>
                                    <div><input type="text" class="form-control" name="taskId"
                                            value="<%= task.taskId %>" /></div>
                                </td>

                                <td>
                                    <div><input type="text" class="form-control" name="taskName"
                                            value="<%= task.taskName %>" /></div>
                                </td>

                                <td>
                                    <div><input type="text" class="form-control" name="taskDescription"
                                            value="<%= task.taskDescription %>" /></div>
                                </td>

                                <td>
                                    <div><input type="date" class="form-control" name="startDate"
                                            value="<%= task.startDate %>" /></div>
                                </td>

                                <td>
                                    <div><input type="date" class="form-control" name="endDate"
                                            value="<%= task.endDate %>" /></div>
                                </td>

                                <td>
                                    <div><input type="text" class="form-control" name="owner"
                                            value="<%= task.owner %>" /></div>
                                </td>

                                <td>
                                    <input type="submit" class="btn btn-primary" formaction="/tasks/<%= task.taskId %>?_method=PUT"
                                        value="Update Task" style="width: 200px" />
                                </td>
                                <td>
                                    <input type="submit" class="btn btn-danger" formaction="/tasks/<%= task.taskId %>?_method=DELETE"
                                        value="Delete Task" style="width: 200px" />
                                </td>
                            </tr>
                        </table>
                    </form>

                    <% })%>

                    <div class="container-contact2-form-btn">
                        <div class="wrap-contact2-form-btn">
                            <div class="contact2-form-bgbtn"></div>
                            <a href="/" class="contact2-form-btn"> Main Page</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="/vendor/bootstrap/js/popper.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->

</body>

</html>